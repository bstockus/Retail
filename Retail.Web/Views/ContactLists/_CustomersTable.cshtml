@model IEnumerable<Retail.Web.Models.Customer>

@if (Model.Count() == 0) {
    <p class="text-center">No Customers</p>
} else {
    <table class="table table-condensed">
        @foreach (var item in Model) {
            <tr>
                @if (ViewBag.IsCustomersInListView) {
                    <td class="no-top-border">
                        <a href="@Url.Action("RemoveContactFromList", new {listId = ViewBag.ContactListId, contactId = item.Id})">
                            <i class="fa fa-chevron-circle-left"></i>
                        </a>

                    </td>
                }
                <td class="no-top-border">
                    @Html.DisplayFor(modelItem => item)
                </td>
                @if (!ViewBag.IsCustomersInListView) {
                    <td class="no-top-border text-right">
                        <a href="@Url.Action("AddContactToList", new {listId = ViewBag.ContactListId, contactId = item.Id})">
                            <i class="fa fa-chevron-circle-right"></i>
                        </a>
                    </td>
                }
            </tr>
        }
    </table>
}