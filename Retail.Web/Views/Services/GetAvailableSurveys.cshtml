@model IEnumerable<Retail.Web.Models.Service>

@if (Model.Count() == 0) {
    <table class="table" id="avail-surveys-tbl">
        <tr>
            <td>
                <p class="text-center">No Available Surveys</p>
            </td>
        </tr>
    </table>
} else {
    <table class="table" id="avail-surveys-tbl">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                
            </th>

        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    <a role="button" class="btn btn-xs btn-primary" href="@Url.Action("Survey", "Services", new { id = item.Id })">Survey <i class="fa fa-chevron-circle-right"></i></a>
                </td>
            </tr>
        }

    </table>
}
