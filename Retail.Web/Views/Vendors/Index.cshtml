@model IEnumerable<Retail.Web.Models.Vendor>

@{
    ViewBag.Title = "Vendors";
}

<div class="">
    <p class="pull-right">
        <a role="button" class="btn btn-success" href="@Url.Action("Create")"><i class="fa fa-plus"></i> Create New</a>
    </p>
    <h2>Vendors</h2>
</div>

<table class="table table-special">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Products
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
            <td>
                @item.Products.Count.ToString()
            </td>
            <td class="text-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }

</table>
