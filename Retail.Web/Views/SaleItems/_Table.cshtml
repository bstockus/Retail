@model IEnumerable<Retail.Web.Models.SaleItem>

@{
    if (ViewBag.IsEditable == null) {
        ViewBag.IsEditable = true;
    }
}

@if (Model.Count() == 0) {
    <p class="text-center">No Sale Items</p>
} else {
    
    <style type="text/css">
        #commands-column {
            width: 20px;
        }

        #unit-price-column {
            width: 100px;
        }

        #quantity-column {
            width: 50px;
        }

        #item-price-column {
            width: 100px;
        }

    </style>
    
    <table class="table">
        <tr>
            @if (ViewBag.IsEditable) {
                <th id="commands-column"></th>
            }
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th class="text-right" id="unit-price-column">
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th class="text-right" id="quantity-column">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th class="text-right" id="item-price-column">
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>
        </tr>



        @foreach (var item in Model) {
            <tr>
                @if (ViewBag.IsEditable) {
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-minus-circle"></i></a>
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Product)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.ItemPrice)
                </td>
            </tr>
        }

    </table>
}