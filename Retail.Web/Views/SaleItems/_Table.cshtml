@model IEnumerable<Retail.Web.Models.SaleItem>

@{
    if (ViewBag.IsEditable == null) {
        ViewBag.IsEditable = true;
    }
}

@if (Model.Count() == 0) {
    <p class="text-center">No Sale Items</p>
} else {
    
    <style type="text/css">
        #unit-price-column {
            width: 100px;
        }

        #quantity-column {
            width: 50px;
        }

        #item-price-column {
            width: 100px;
        }

    </style>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th id="unit-price-column">
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th id="quantity-column">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th class="text-right" id="item-price-column">
                @Html.DisplayNameFor(model => model.ItemPrice)
            </th>
            @if (ViewBag.IsEditable) {
                <th></th>
            }
        </tr>



        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.ItemPrice)
                </td>
                @if (ViewBag.IsEditable) {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }

    </table>
}